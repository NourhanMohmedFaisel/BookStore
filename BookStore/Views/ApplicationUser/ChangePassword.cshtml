@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .change-pass-card {
        border-radius: 20px;
        background: #fff;
        box-shadow: 0 15px 40px rgba(0,0,0,0.08);
        padding: 40px 30px;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-group {
        position: relative;
    }

    .form-control {
        border-radius: 12px;
        padding-left: 16px;
        padding-right: 40px;
        box-shadow: none;
    }

        .form-control:focus {
            border-color: #f86d72;
            box-shadow: 0 0 0 0.2rem rgba(248, 109, 114, 0.25);
        }

    .toggle-password {
        position: absolute;
        top: 65%;
        right: 10px;
        transform: translateY(-50%);
        cursor: pointer;
        color: #888;
        font-size: 1.2rem; 
        line-height: 1;
    }


    .btn-pink {
        background-color: #f86d72;
        color: white;
        border: none;
        padding: 10px 25px;
        font-weight: bold;
        border-radius: 30px;
        transition: 0.3s ease;
    }

        .btn-pink:hover {
            background-color: #d9534f;
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 10px 25px;
        font-weight: bold;
        border-radius: 30px;
        transition: 0.3s ease;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
        }

    .text-pink {
        color: #f86d72;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="change-pass-card">
                <h3 class="text-center fw-bold mb-4 text-pink">🔐 Change Your Password</h3>

                <form asp-action="ChangePassword" method="post">
                    <div class="mb-3 form-group">
                        <label asp-for="CurrentPassword" class="form-label"></label>
                        <input asp-for="CurrentPassword" class="form-control" type="password" id="CurrentPassword" />
                        <i class="bi bi-eye-slash toggle-password" onclick="togglePassword('CurrentPassword', this)"></i>
                        <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" class="form-control" type="password" id="NewPassword" />
                        <i class="bi bi-eye-slash toggle-password" onclick="togglePassword('NewPassword', this)"></i>
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" id="ConfirmPassword" />
                        <i class="bi bi-eye-slash toggle-password" onclick="togglePassword('ConfirmPassword', this)"></i>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Profile" class="btn btn-cancel">Cancel</a>
                        <button type="submit" class="btn btn-pink">Update Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId, icon) {
            const input = document.getElementById(inputId);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            }
        }
    </script>
}
