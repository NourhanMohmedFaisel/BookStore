@model UserProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center fw-semibold">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container py-5">
    
    <div class="profile-header">
        <h2>Welcome, @Model.Name 👋</h2>
        <p>Manage your profile and see your order history</p>
    </div>

  
    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <div class="profile-card profile-info">
                <h4 class="mb-4 text-center text-site-color fw-bold">Your Information</h4>
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>

                <div class="text-center mt-4">
                    <a asp-action="EditProfile" asp-route-id="@Model.Id" class="edit-btn">
                        <i class="bi bi-pencil-square me-1"></i> Edit Profile
                    </a>
                    <a asp-action="ChangePassword" class="edit-btn">
                        <i class="bi bi-lock-fill me-1"></i> Change Password
                    </a>
                </div>
            </div>
        </div>
    </div>

  
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <h4 class="mb-3 fw-bold text-site-color">Your Orders</h4>
            @if (Model.Orders != null && Model.Orders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover orders-table">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td>#@order.Id</td>
                                    <td>@order.OrderDate.ToShortDateString()</td>
                                    <td>$@order.TotalAmount</td>
                                    <td>@order.Status</td>
                                    <td>
                                        @if (order.Status.ToLower() == "pending")
                                        {
                                            <a asp-controller="Payment" asp-action="Checkout" asp-route-orderId="@order.Id"
                                               class="pay-now-btn">
                                                <i class="bi bi-credit-card-2-front me-1"></i> Pay Now
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="paid-badge">
                                                <i class="bi bi-check-circle-fill me-1"></i> Paid
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">You haven't placed any orders yet.</div>
            }
        </div>
    </div>
</div>


<style>
    .profile-card {
        border-radius: 16px;
        background: #fff;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        padding: 30px;
    }

    .profile-header {
        background: linear-gradient(135deg, #f86d72, #d9534f);
        color: #fff;
        border-radius: 16px;
        padding: 30px 20px;
        text-align: center;
        margin-bottom: 40px;
    }

        .profile-header h2 {
            font-weight: bold;
            font-size: 2rem;
        }

        .profile-header p {
            opacity: 0.9;
        }

    .profile-info p {
        font-size: 1.1rem;
        margin-bottom: 10px;
    }

    .profile-info strong {
        color: #333;
        width: 120px;
        display: inline-block;
    }

    .edit-btn {
        background: linear-gradient(135deg, #fd6d7b, #f86d72);
        border: none;
        padding: 10px 25px;
        font-weight: bold;
        border-radius: 30px;
        color: white;
        transition: 0.3s ease;
        margin: 8px 5px;
    }

        .edit-btn:hover {
            background: linear-gradient(135deg, #f86d72, #d9534f);
        }

    .orders-table thead {
        background-color: #f86d72;
        color: white;
    }

    .orders-table td, .orders-table th {
        vertical-align: middle;
    }

  
    .pay-now-btn {
        background: linear-gradient(135deg, #54d6b0, #3ac9a8);
        border: none;
        color: white;
        border-radius: 25px;
        padding: 6px 18px;
        font-weight: 500;
        transition: 0.3s ease;
        font-size: 0.9rem;
    }

        .pay-now-btn:hover {
            background: linear-gradient(135deg, #3ac9a8, #2aa98f);
        }

  
    .paid-badge {
        background-color: #d1e7dd;
        color: #0f5132;
        font-weight: 600;
        border-radius: 15px;
        padding: 5px 15px;
        font-size: 0.9rem;
    }

    .text-site-color {
        color: #f86d72;
    }
</style>
