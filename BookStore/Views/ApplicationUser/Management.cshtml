@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .text-pink {
        color: #fd6d7b;
    }

    .btn-pink {
        background-color: #fd6d7b;
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-pink:hover {
            background-color: #ff4e61;
            color: white;
        }

    .btn-outline-secondary:hover {
        background-color: #e2e6ea;
    }

    .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }
</style>


<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-pink"><i class="bi bi-people-fill me-2"></i>User Management</h2>
        <p class="text-muted">Manage users and view their orders from here.</p>
    </div>

    <div class="row justify-content-center g-4">
   
        <div class="col-md-5">
            <div class="card card-hover shadow-sm rounded-4 p-4 text-center h-100 border-0">
                <i class="bi bi-person-lines-fill display-4 text-pink mb-3"></i>
                <h5 class="fw-bold mb-3">View All Users</h5>
                <a class="btn btn-pink px-4 py-2 rounded-pill" asp-action="ListUsers" asp-controller="ApplicationUser">
                    Manage Users
                </a>
            </div>
        </div>

    
        <div class="col-md-5">
            <div class="card card-hover shadow-sm rounded-4 p-4 text-center h-100 border-0">
                <i class="bi bi-card-checklist display-4 text-pink mb-3"></i>
                <h5 class="fw-bold mb-3">View Orders by User</h5>
                <a class="btn btn-outline-secondary px-4 py-2 rounded-pill" asp-action="UserOrders" asp-controller="ApplicationUser">
                    View Orders
                </a>
            </div>
        </div>
    </div>
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
