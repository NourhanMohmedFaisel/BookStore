@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
   
}


<style>
    .form-container {
        background: rgba(255, 255, 255, 0.95);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: auto;
    }

    .form-title {
        color: #fd6d7b;
        font-weight: bold;
        margin-bottom: 25px;
        text-align: center;
    }

    .btn-pink {
        background-color: #fd6d7b;
        color: white;
        border: none;
    }

        .btn-pink:hover {
            background-color: #ff4e61;
            color: white;
        }

    .form-control:focus {
        border-color: #fd6d7b;
        box-shadow: 0 0 0 0.25rem rgba(253, 109, 123, 0.25);
    }

    .text-link {
        color: #fd6d7b;
        text-decoration: none;
    }

        .text-link:hover {
            text-decoration: underline;
        }

    .toggle-password {
        cursor: pointer;
        color: #888;
    }
</style>

<div class="container mt-5">
    <div class="form-container">
        <h2 class="form-title"><i class="bi bi-person-plus-fill me-2"></i>Register</h2>

        <form asp-action="SaveRegister" method="post">

            <div class="mb-3">
                <label asp-for="UserName" class="form-label">👤 Username</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3 position-relative">
                <label asp-for="Password" class="form-label">🔐 Password</label>
                <div class="position-relative">
                    <input asp-for="Password" class="form-control pe-5" type="password" id="passwordInput" />
                    <i class="bi bi-eye-fill toggle-password position-absolute top-50 end-0 translate-middle-y me-3"
                       data-target="passwordInput"></i>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            
            <div class="mb-3 position-relative">
                <label asp-for="ConfirmPassword" class="form-label">🔒 Confirm Password</label>
                <div class="position-relative">
                    <input asp-for="ConfirmPassword" class="form-control pe-5" type="password" id="confirmPasswordInput" />
                    <i class="bi bi-eye-fill toggle-password position-absolute top-50 end-0 translate-middle-y me-3"
                       data-target="confirmPasswordInput"></i>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">📧 Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="phoneNumber" class="form-label">📱 Phone Number</label>
                <input asp-for="phoneNumber" class="form-control" />
                <span asp-validation-for="phoneNumber" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-pink rounded-pill py-2">
                    <i class="bi bi-person-plus me-1"></i> Register
                </button>
            </div>

            <div class="text-center mt-3">
                <small>Already have an account?</small>
                <a asp-action="Login" class="text-link ms-1 fw-semibold">Login Now</a>
            </div>
        </form>
    </div>
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.toggle-password').forEach(icon => {
            icon.addEventListener('click', function () {
                const inputId = this.getAttribute('data-target');
                const input = document.getElementById(inputId);
                const isPassword = input.type === "password";

                input.type = isPassword ? "text" : "password";
                this.classList.toggle("bi-eye-fill", !isPassword);
                this.classList.toggle("bi-eye-slash-fill", isPassword);
            });
        });
    </script>
}
