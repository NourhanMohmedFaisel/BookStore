@model ReviewViewModelWithId

@{
    ViewData["Title"] = "Delete Review";
   
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 p-5 bg-white">
        <div class="text-center mb-4">
            <i class="bi bi-exclamation-triangle-fill text-danger fs-1"></i>
            <h3 class="fw-bold text-danger mt-3">Are you sure you want to delete this review?</h3>
            <p class="fs-5 text-dark">
                Book:
                <span class="fw-bold text-pink">
                    @Model.BookTitle
                </span>
            </p>

            <div class="mb-4">
                <label class="fw-semibold mb-1">Your Rating:</label>
                <div class="fs-4">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="bi @(i <= Model.Rating ? "bi-star-fill text-warning" : "bi-star text-muted") me-1"></i>
                    }
                </div>
            </div>


        <div class="mb-4">
            <label class="fw-semibold mb-1">Your Comment:</label>
            <div class="border rounded-3 p-3 bg-light text-dark" style="line-height: 1.6;">
                @Model.Comment
            </div>
        </div>

        <!-- Action Buttons -->
        <form asp-action="DeleteConfirmed" method="post" class="d-flex justify-content-center gap-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm">
                <i class="bi bi-trash-fill me-1"></i> Delete
            </button>
            <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.BookId" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                <i class="bi bi-x-circle me-1"></i> Cancel
            </a>
        </form>
    </div>
</div>

<style>
    .text-pink {
        color: #fd6d7b;
    }

    .star-rating i {
        color: #ffc107;
        margin-right: 3px;
    }

    .btn-outline-secondary:hover {
        background-color: #f0f0f0;
    }
</style>
