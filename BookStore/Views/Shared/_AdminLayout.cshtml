<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f5f6fa;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #272727;
            color: white;
            border-right: 1px solid rgba(255, 255, 255, 0.1);
        }

            .sidebar h4 {
                padding: 20px;
                margin: 0;
                background-color: #1f1f1f;
                font-weight: bold;
                font-size: 1.4rem;
                text-align: center;
            }

            .sidebar a {
                color: #ddd;
                display: block;
                padding: 12px 20px;
                text-decoration: none;
                transition: 0.2s;
            }

                .sidebar a:hover {
                    background-color: #f86d72;
                    color: white;
                    padding-left: 25px;
                    border-left: 5px solid white;
                }

        .topbar {
            background-color: white;
            padding: 15px 30px;
            border-bottom: 1px solid #ddd;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);
        }

        .main-content {
            padding: 30px;
            margin: 20px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.06);
        }

        .topbar .date {
            color: #999;
            font-size: 0.95rem;
        }

        .bi {
            margin-right: 8px;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
         
            <div class="col-md-2 sidebar p-0">
                <h4>📚 Admin</h4>
                <a asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
                <a asp-controller="Book" asp-action="Index"><i class="bi bi-book"></i> Books</a>
              
                <a asp-controller="ApplicationUser" asp-action="Management"><i class="bi bi-people"></i> Users</a>
                <a asp-controller="Category" asp-action="Index"><i class="bi bi-tags"></i> Categories</a>
               
                <a asp-controller="Home" asp-action="Index"><i class="bi bi-box-arrow-right"></i> Back</a>
                

            </div>

          
            <div class="col-md-10 p-0">
                <div class="topbar d-flex justify-content-between align-items-center">
                    <span class="fw-bold fs-5">Welcome @User.Identity.Name 👋</span>
                    <span class="date">@DateTime.Now.ToString("dddd, dd MMM yyyy")</span>
                </div>
                <div class="main-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @RenderSection("Scripts", required: false)

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>
