@model List<Book>

@{
    ViewData["Title"] = "My Wishlist";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .wishlist-title {
        color: #fd6d7b;
        font-weight: 700;
        font-size: 2.2rem;
        margin-bottom: 40px;
    }

    .book-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: all 0.3s ease;
        background-color: #fff;
    }

        .book-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .book-card img {
            object-fit: cover;
            height: 280px;
            width: 100%;
            border-bottom: 1px solid #eee;
        }

    .card-body h6 {
        color: #333;
        font-size: 1.1rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 0.9rem;
        color: #777;
        min-height: 55px;
    }

    .price-tag {
        color: #fd6d7b;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .btn-custom {
        padding: 0.45rem 1rem;
        font-size: 0.85rem;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

    .btn-pink {
        background-color: #fd6d7b;
        color: #fff;
        border: none;
    }

        .btn-pink:hover {
            background-color: #ff4e61;
            color: white;
        }

    .btn-outline-gray {
        border: 1px solid #ccc;
        color: #555;
        background-color: #f8f9fa;
    }

        .btn-outline-gray:hover {
            background-color: #e2e6ea;
        }

    .empty-text {
        font-size: 1.2rem;
        color: #aaa;
        text-align: center;
        padding: 60px 0;
    }

</style>

<div class="container py-5">
    <h2 class="wishlist-title text-center"><i class="bi bi-heart-fill me-2"></i>My Wishlist</h2>

    @if (Model == null || !Model.Any())
    {
        <p class="empty-text"><i class="bi bi-emoji-frown me-2"></i>Your wishlist is currently empty.</p>
    }
    else
    {
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card book-card h-100">
                        <a href="/Home/Details/@book.Id">
                            <img src="/images/@(string.IsNullOrEmpty(book.ImagePath) ? "default-book.jpg" : book.ImagePath)" class="card-img-top" alt="@book.Title" />
                        </a>
                        <div class="card-body d-flex flex-column p-3">
                            <h6>@book.Title</h6>
                            <p class="card-text">@book.Description?.Substring(0, Math.Min(70, book.Description.Length))...</p>
                            <span class="price-tag mb-3">$@book.Price</span>
                            <div class="mt-auto d-grid gap-2">
                                <a href="/Book/Details/@book.Id" class="btn btn-outline-gray btn-custom">
                                    <i class="bi bi-eye me-1"></i> View Details
                                </a>
                                <a href="/CartItem/Add/@book.Id" class="btn btn-pink btn-custom">
                                    <i class="bi bi-bag-plus me-1"></i> Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
