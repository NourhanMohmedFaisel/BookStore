@model CategoryViewModelWithId

@{
    ViewData["Title"] = "Edit Category";
}


<style>
    .form-container {
        background: rgba(255, 255, 255, 0.95);
        padding: 35px;
        border-radius: 16px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        max-width: 700px;
        margin: auto;
    }

    .form-title {
        color: #fd6d7b;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
    }

    .btn-pink {
        background-color: #fd6d7b;
        color: white;
        border: none;
    }

        .btn-pink:hover {
            background-color: #ff4e61;
            color: white;
        }

    .btn-outline-secondary:hover {
        background-color: #e2e6ea;
    }

    .form-control:focus, .form-select:focus {
        border-color: #fd6d7b;
        box-shadow: 0 0 0 0.25rem rgba(253, 109, 123, 0.25);
    }

    label {
        font-weight: 500;
    }

    .image-preview {
        max-width: 120px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .form-section {
        margin-bottom: 20px;
    }
</style>

<div class="container mt-5">
    <div class="form-container">
        <h2 class="form-title"><i class="bi bi-pencil-fill me-2"></i> Edit Category</h2>

        <form asp-action="SaveEdit" method="post" asp-route-id="@Model.Id" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

           
            <div class="form-section">
                <label class="form-label">🏷️ Name</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

           

            
            <div class="form-section">
                <label class="form-label">📷 Current Image</label><br />
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="~/images/@Model.ImagePath" alt="Book Cover" class="image-preview mb-2" />
                }
                else
                {
                    <p class="text-muted">No image uploaded.</p>
                }
            </div>

            
            <div class="form-section">
                <label class="form-label">Change Image (optional)</label>
                <input asp-for="Image" type="file" class="form-control" />
                <input type="hidden" asp-for="ImagePath" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

           
           
            
            <div class="d-flex justify-content-between mt-4">

                <button type="submit" class="btn btn-pink px-4">
                    <i class="bi bi-check2-circle me-1"></i> Update
                </button>
                <a href="/Category/Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
